# modules/log_subscription_lambda/variables.tf

variable "lambda_source_file" {
  description = "Path to the Lambda source file (.py) that should be zipped and deployed"
  type        = string
}

variable "function_name" {
  description = "Name of the Lambda function"
  type        = string
}

variable "handler" {
  description = "Lambda function handler (e.g. file_name.function_handler)"
  type        = string
}

variable "runtime" {
  description = "Runtime environment for the Lambda function"
  type        = string
  default     = "python3.11"
}

variable "lambda_role_arn" {
  description = "IAM role ARN that the Lambda function will assume"
  type        = string
}

variable "memory_size" {
  description = "Amount of memory (MB) allocated to the Lambda function"
  type        = number
  default     = 128
}

variable "timeout" {
  description = "Timeout (seconds) for the Lambda execution"
  type        = number
  default     = 300
}

variable "kms_key_arn" {
  description = "KMS key ARN used for encrypting Lambda environment variables"
  type        = string
  default     = null
}

variable "destination_arn" {
  description = "Destination ARN for the CloudWatch log subscription"
  type        = string
}

variable "cloudwatch_role_arn" {
  description = "IAM role ARN for CloudWatch Logs to assume"
  type        = string
}

variable "log_group_prefix" {
  description = "Prefix for the CloudWatch log groups to subscribe"
  type        = string
}

variable "filter_pattern" {
  description = "Filter pattern for the log subscription"
  type        = string
  default     = ""
}

variable "filter_name" {
  description = "Name for the log filter subscription"
  type        = string
  default     = "Cloudwatch_efm_sftp_AutoSubscription"
}

variable "subnet_ids" {
  description = "List of subnet IDs for Lambda VPC configuration"
  type        = list(string)
  default     = []
}

variable "security_group_ids" {
  description = "List of security group IDs for Lambda VPC configuration"
  type        = list(string)
  default     = []
}

variable "rule_name_prefix" {
  description = "Prefix used to name the CloudWatch cron rule"
  type        = string
}

variable "schedule_expression" {
  description = "Schedule expression for CloudWatch event rule (e.g. cron or rate)"
  type        = string
}

variable "tags" {
  description = "Map of tags to assign to resources"
  type        = map(string)
  default     = {}
}


-======================================================================================

# ============================================
# Reusable Lambda Module
# ============================================

variable "lambda_name" {
  description = "Name of the Lambda function"
  type        = string
}

variable "lambda_role_arn" {
  description = "IAM role ARN for Lambda"
  type        = string
}

variable "handler" {
  description = "Lambda handler"
  type        = string
}

variable "runtime" {
  description = "Runtime for the Lambda"
  type        = string
}

variable "filename" {
  description = "Path to Lambda deployment package"
  type        = string
}

variable "enable_lambda_permission" {
  description = "Enable S3 Lambda permission block"
  type        = bool
  default     = false
}

variable "enable_cloudwatch_event" {
  description = "Enable CloudWatch event trigger"
  type        = bool
  default     = false
}

variable "source_account" {
  description = "AWS source account ID"
  type        = string
}

variable "s3_bucket_name" {
  description = "S3 bucket name for source ARN if S3 trigger enabled"
  type        = string
  default     = ""
}

variable "schedule_rate_minutes" {
  description = "Rate in minutes for CloudWatch event rule"
  type        = number
  default     = 10
}

variable "tags" {
  description = "Tags for the resources"
  type        = map(string)
  default     = {}
}

# --------------------------------------------
# Lambda Function
# --------------------------------------------
resource "aws_lambda_function" "this" {
  function_name = var.lambda_name
  handler       = var.handler
  role          = var.lambda_role_arn
  runtime       = var.runtime
  filename      = var.filename
  tags          = var.tags
}

# --------------------------------------------
# Lambda Permission (optional)
# --------------------------------------------
resource "aws_lambda_permission" "s3_trigger" {
  count = var.enable_lambda_permission ? 1 : 0

  statement_id  = "${var.lambda_name}-s3-trigger"
  action        = "lambda:InvokeFunction"
  function_name = aws_lambda_function.this.function_name
  principal     = "s3.amazonaws.com"
  source_arn    = "arn:aws:s3:::${var.s3_bucket_name}"
  source_account = var.source_account
}

# --------------------------------------------
# CloudWatch Event Rule (optional)
# --------------------------------------------
resource "aws_cloudwatch_event_rule" "lambda_schedule" {
  count               = var.enable_cloudwatch_event ? 1 : 0
  name                = "${var.lambda_name}-schedule"
  description         = "Invoke ${var.lambda_name} every ${var.schedule_rate_minutes} minutes"
  schedule_expression = "rate(${var.schedule_rate_minutes} minutes)"
  tags                = var.tags
}

resource "aws_cloudwatch_event_target" "lambda_target" {
  count = var.enable_cloudwatch_event ? 1 : 0

  rule      = aws_cloudwatch_event_rule.lambda_schedule[0].name
  target_id = "lambda"
  arn       = aws_lambda_function.this.arn
}

resource "aws_lambda_permission" "allow_cloudwatch" {
  count = var.enable_cloudwatch_event ? 1 : 0

  statement_id  = "${var.lambda_name}-AllowExecutionFromCloudWatch"
  action        = "lambda:InvokeFunction"
  function_name = aws_lambda_function.this.function_name
  principal     = "events.amazonaws.com"
  source_arn    = aws_cloudwatch_event_rule.lambda_schedule[0].arn
  source_account = var.source_account
}

==============================================


variable "env" {
  description = "Environment name (e.g. test, prod)"
  type        = string
}

variable "region" {
  description = "Region name (e.g. east, west)"
  type        = string
}

variable "custom_role_name" {
  description = "Optional custom role name override"
  type        = string
  default     = ""
}

variable "custom_bucket_name" {
  description = "Optional custom S3 bucket name override"
  type        = string
  default     = ""
}

variable "kms_key_arn" {
  description = "KMS Key ARN for encryption"
  type        = string
  default     = ""
}

variable "subnet_ids" {
  description = "List of subnet IDs"
  type        = list(string)
  default     = []
}

variable "security_group_ids" {
  description = "List of security group IDs"
  type        = list(string)
  default     = []
}

variable "tags" {
  description = "Common resource tags"
  type        = map(string)
  default     = {}
}

locals {
  role_name = var.custom_role_name != "" ? var.custom_role_name : (
    var.env == "test" ? "test-test" :
    var.env == "prod" ? "test-prod" :
    "test-${var.env}"
  )

  s3_bucket_name = var.custom_bucket_name != "" ? var.custom_bucket_name : (
    var.env == "test" && var.region == "east" ? "test-test-east-bucket" :
    var.env == "test" && var.region == "west" ? "test-test-west-bucket" :
    var.env == "prod" && var.region == "east" ? "test-prod-east-bucket" :
    var.env == "prod" && var.region == "west" ? "test-prod-west-bucket" :
    "test-${var.env}-${var.region}-bucket"
  )

  kms_key_arn_local = var.kms_key_arn != "" ? var.kms_key_arn : (
    var.env == "test" && var.region == "east" ? "arn:aws:kms:us-east-1:111111111111:key/test-test-east" :
    var.env == "test" && var.region == "west" ? "arn:aws:kms:us-west-2:111111111111:key/test-test-west" :
    var.env == "prod" && var.region == "east" ? "arn:aws:kms:us-east-1:222222222222:key/test-prod-east" :
    var.env == "prod" && var.region == "west" ? "arn:aws:kms:us-west-2:222222222222:key/test-prod-west" :
    ""
  )

  subnet_ids_local = length(var.subnet_ids) > 0 ? var.subnet_ids : (
    var.env == "test" && var.region == "east" ? ["subnet-test-east-1", "subnet-test-east-2"] :
    var.env == "test" && var.region == "west" ? ["subnet-test-west-1", "subnet-test-west-2"] :
    var.env == "prod" && var.region == "east" ? ["subnet-prod-east-1", "subnet-prod-east-2"] :
    var.env == "prod" && var.region == "west" ? ["subnet-prod-west-1", "subnet-prod-west-2"] :
    []
  )

  security_group_ids_local = length(var.security_group_ids) > 0 ? var.security_group_ids : (
    var.env == "test" && var.region == "east" ? ["sg-test-east"] :
    var.env == "test" && var.region == "west" ? ["sg-test-west"] :
    var.env == "prod" && var.region == "east" ? ["sg-prod-east"] :
    var.env == "prod" && var.region == "west" ? ["sg-prod-west"] :
    []
  )

  tags_local = merge(
    (
      var.env == "test" && var.region == "east" ? {
        Env    = "test"
        Region = "east"
        Role   = local.role_name
        Bucket = local.s3_bucket_name
        KMS    = local.kms_key_arn_local
      } :
      var.env == "test" && var.region == "west" ? {
        Env    = "test"
        Region = "west"
        Role   = local.role_name
        Bucket = local.s3_bucket_name
        KMS    = local.kms_key_arn_local
      } :
      var.env == "prod" && var.region == "east" ? {
        Env    = "prod"
        Region = "east"
        Role   = local.role_name
        Bucket = local.s3_bucket_name
        KMS    = local.kms_key_arn_local
      } :
      var.env == "prod" && var.region == "west" ? {
        Env    = "prod"
        Region = "west"
        Role   = local.role_name
        Bucket = local.s3_bucket_name
        KMS    = local.kms_key_arn_local
      } :
      {
        Env    = var.env
        Region = var.region
        Role   = local.role_name
        Bucket = local.s3_bucket_name
        KMS    = local.kms_key_arn_local
      }
    ),
    var.tags
  )
}


output "role_name" {
  value = local.role_name
}

output "s3_bucket_name" {
  value = local.s3_bucket_name
}

output "kms_key_arn" {
  value = local.kms_key_arn_local
}

output "subnet_ids" {
  value = local.subnet_ids_local
}

output "security_group_ids" {
  value = local.security_group_ids_local
}

output "tags" {
  value = local.tags_local
}



