variable "sftp_secret_name" {
  type        = string
  description = "Name of the AWS Secrets Manager secret that stores SFTP user configuration."
}

variable "home_directory" {
  type        = string
  description = "SFTP user's home directory path (must match S3 prefix mapping)."
}

variable "ftp_password" {
  type        = string
  sensitive   = true
  description = "Password for SFTP user (only used when password auth is enabled)."
}

variable "role_arn" {
  type        = string
  description = "IAM role ARN used by AWS Transfer Family for this SFTP user."
}

variable "sftp_key" {
  type        = string
  description = "SSH public key for SFTP user (used for key-based auth)."
}

variable "bucket_name" {
  type        = string
  description = "Name of the S3 bucket used for Transfer Family home directory and access policy."
}

variable "prefix" {
  type        = string
  description = "S3 prefix (folder) that the SFTP user is restricted to inside the bucket."
}

variable "allowed_actions" {
  type        = list(string)
  default     = ["s3:GetObject"]
  description = "List of allowed S3 actions inside the user's prefix (e.g., s3:GetObject, s3:PutObject)."
}

variable "extra_fields" {
  type        = map(any)
  default     = {}
  description = "Optional extra key/value pairs to include in the Secrets Manager secret JSON."
}

variable "sftp_server" {
  type        = bool
  default     = false
  description = "Enable SFTP secret creation when true."
}


locals {
  policy_template = {
    Version = "2012-10-17"
    Statement = [
      {
        Effect   = "Allow"
        Action   = ["s3:ListBucket"]
        Resource = "arn:aws:s3:::${var.bucket_name}"
        Condition = {
          StringLike = {
            "s3:prefix" = ["${var.prefix}"]
          }
        }
      },
      {
        Effect   = "Allow"
        Action   = var.allowed_actions
        Resource = "arn:aws:s3:::${var.bucket_name}/${var.prefix}*"
      }
    ]
  }

  base_values = {
    HomeDirectory = var.home_directory
    FTPPassword   = var.ftp_password
    Policy        = jsonencode(local.policy_template)
    Role          = var.role_arn
    SFTPKey       = var.sftp_key
  }

  secret_payload = merge(local.base_values, var.extra_fields)
}

resource "aws_secretsmanager_secret" "sftp_user" {
  count = var.sftp_server ? 1 : 0
  name  = var.sftp_secret_name
}

resource "aws_secretsmanager_secret_version" "sftp_user_version" {
  count        = var.sftp_server ? 1 : 0
  secret_id    = aws_secretsmanager_secret.sftp_user[0].id
  secret_string = jsonencode(local.secret_payload)
}









d###########################################
# vars.tf
###########################################
variable "function_name" {
  description = "Lambda function name"
  type        = string
}

variable "lambda_source_file" {
  description = "Source file for lambda zip"
  type        = string
}

variable "handler" {
  description = "Lambda handler"
  type        = string
}

variable "runtime" {
  description = "Lambda runtime"
  type        = string
}

variable "memory_size" {
  description = "Lambda memory size"
  type        = number
}

variable "timeout" {
  description = "Lambda timeout in seconds"
  type        = number
}

variable "log_retention_in_days" {
  description = "Log retention days"
  type        = number
}

variable "env_vars" {
  description = "Environment variables for Lambda"
  type        = map(string)
  default     = {}
}

variable "ssh_key" {
  description = "SSH private key contents"
  type        = string
  default     = null
  sensitive   = true
}

###########################################
# locals.tf
###########################################
locals {
  create_ssh_secret = var.ssh_key != null && var.ssh_key != ""

  final_env_vars = merge(
    var.env_vars,
    local.create_ssh_secret ? {
      SSH_SECRET_ARN = aws_secretsmanager_secret.ssh[0].arn
    } : {}
  )
}

###########################################
# main.tf
###########################################
data "archive_file" "lambda_zip" {
  type        = "zip"
  source_file = var.lambda_source_file
  output_path = "${path.module}/.build/${var.function_name}.zip"
}

resource "aws_secretsmanager_secret" "ssh" {
  count = local.create_ssh_secret ? 1 : 0
  name  = "${var.function_name}-ssh-key"
}

resource "aws_secretsmanager_secret_version" "ssh_ver" {
  count         = local.create_ssh_secret ? 1 : 0
  secret_id     = aws_secretsmanager_secret.ssh[0].id
  secret_string = jsonencode({ ssh_key = var.ssh_key })
}

resource "aws_lambda_function" "lambda" {
  function_name    = var.function_name
  filename         = data.archive_file.lambda_zip.output_path
  source_code_hash = data.archive_file.lambda_zip.output_base64sha256
  handler          = "${var.handler}.handler"
  runtime          = var.runtime
  memory_size      = var.memory_size
  timeout          = var.timeout

  environment {
    variables = local.final_env_vars
  }
}

resource "aws_cloudwatch_log_group" "lambda_logs" {
  name              = "/aws/lambda/${aws_lambda_function.lambda.function_name}"
  retention_in_days = var.log_retention_in_days
}
